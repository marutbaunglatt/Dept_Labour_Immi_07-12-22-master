@model Dept_Labour_Immi.Models.ServiceforThaiWorker

@{
    ViewData["Title"] = "Edit";
}

<h2>ပြင်ဆင်ခြင်း</h2>

<h4>Service for Thai Worker</h4>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="PinkCardServiceCount" class="control-label"></label>
                    <input asp-for="PinkCardServiceCount" class="form-control" />
                    <span asp-validation-for="PinkCardServiceCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CICardServiceCount" class="control-label"></label>
                    <input asp-for="CICardServiceCount" class="form-control" id="inp" />
                    <span asp-validation-for="CICardServiceCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="myButton" />
                    <a asp-action="Index" class="myButton">Back to List</a>
                </div>
            </form>
        </div>
    </div>


@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
{
    <div class="alert alert-<strong>Error!</strong> danger" style="color:red ; font-weight:bold">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<script>
    const inp = document.querySelector("#inp");

    inp.addEventListener("keyup", function () {
        inp.value = inp.value.trim();
    })
</script>
