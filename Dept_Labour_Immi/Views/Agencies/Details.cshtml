            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.Todate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.Remark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.penaltyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty.agency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var index1 = 1;
        }

        @if (Model.PenaltyList.Count > 0)
        {
            @foreach (var item in Model.PenaltyList)
            {
                <tr>
                    <td>@index1</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
