    <a asp-action="Index" class="myButton">Back to List</a>
</div>
<br />
<h2>BOD List</h2>
<table class="table" id="BODTB">
    <thead>
        <tr>
            <th>စဥ်</th>
            <th>
                @Html.DisplayNameFor(model => model.BOD_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOD.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOD.NRC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOD.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOD.agency)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
        }
        @if (Model.BODList.Count > 0)
        {
            @foreach (var item in Model.BODList)
            {
                <tr>
                    <td>@index</td>
                    <td class="aherf_link">
                        <a asp-action="Details" asp-route-id="@item.ID">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NRC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.agency.AgencyName)
                    </td>
                </tr>
                index++;
            }
        }
        else{
            <tr><td colspan="6" style="text-align:center">There is no data.</td></tr>
        }
       
    </tbody>
</table>
<br />
<h2>Penalty List</h2>
<table class="table" id="PenaltyTB">
