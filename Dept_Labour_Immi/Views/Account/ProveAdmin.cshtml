@{
    var error = ViewBag.Error;
}

<div style="margin: auto; width: 20%; margin-top: 100px;">
    <div class="logo translate-middle start-50 position-absolute row">
        <a href="">
            <img src="theme/assets/images/MOLIP.jpg" width="80" alt="" />
        </a>
    </div>
    <div class="container my-5"> <p class="mb-5"></p></div>
    <form class="justify-content-center" method="post">
        <h2 class="text-center mt-5">Prove Admin</h2>
        @if (error != null)
        {
            <div class="alert alert-danger" role="alert">
                @error
            </div>
        }
        <div class="form-floating mt-2">
            <input class="form-control" type="password" name="password" oncopy="return false" onpaste="return false" placeholder="Enter password" required>
            <label for="password">Password</label>
        </div>
        <input type="submit" class="btn btn-lg btn-primary translate-middle start-50 position-absolute my-5" value="Submit" />
    </form>

</div>